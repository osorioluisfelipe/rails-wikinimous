<div class='container'>
  <%= simple_form_for(article) do |f| %>
  <div class='row display-inline'>
    <%= f.input :title %>
  </div>
  <div class='row display-inline'>
    <%= f.input :content %>
  </div>
  <div class='row display-inline'>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
  <% end %>
</div>
