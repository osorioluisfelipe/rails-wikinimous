<!DOCTYPE html>
<html>
  <head>
    <title>RailsWikinimous</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light text-white">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <div class="col">
            <div class='nav item'>
              <%= link_to "Wikinimous", articles_path, class: "nav-link active" %>
            </div>
          </div>
          <div class="col">
            <div class='nav justify-content-end'>
              <%= link_to "New Article", new_article_path, class: "nav-link active" %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <br>
    <%= yield %>
  </body>
</html>
